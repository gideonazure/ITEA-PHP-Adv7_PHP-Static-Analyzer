{
  "name": "itea/php-static-analyzer",
  "description": "",
  "type": "project",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Vladimir Kuprienko",
      "email": "vldmr.kuprienko@gmail.com",
      "role": "Maintainer"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4",
    "phpdocumentor/reflection-docblock": "^5.2",
    "symfony/console": "^5.1",
    "symfony/finder": "^5.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "ITEA\\PhpStaticAnalyzer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ITEA\\PhpStaticAnalyzer\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "cs-check": "php-cs-fixer fix --allow-risky=yes --diff --ansi --dry-run",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes --diff --ansi",
    "tester": "php bin/console class-info-by-name tests AnalyzerTester"
  },
  "config": {
    "sort-packages": true
  }
}
