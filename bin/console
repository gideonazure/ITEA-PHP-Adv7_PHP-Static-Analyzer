#!/usr/bin/env php
<?php

use ITEA\PhpStaticAnalyzer\Analyzer\ClassByNameAnalyzer;
use ITEA\PhpStaticAnalyzer\Command\ClassByNameAnalyzeCommand;
use Symfony\Component\Console\Application;

require_once __DIR__ . '/../vendor/autoload.php';

$application = new Application('PHP Static Analyzer', 'v2.0.0');
$analyzer = new ClassByNameAnalyzer();
$command = new ClassByNameAnalyzeCommand($analyzer);
$application->add($command);

$application->run();
